<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <Switch
        android:id="@+id/standard_switch"
        android:layout_width="367dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:text="Use last as standard"
        android:textColor="@color/text_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/txt_standard_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="92dp"
        android:text="Standard Ort"
        android:textColor="@color/text_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/standard_switch" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="-2dp"
        android:ems="10"
        android:inputType="text"
        android:text="Ort"
        android:hint="standard place"
        android:textColor="@color/text_settings"
        android:autofillHints="places"
        android:textColorHighlight="@color/darker_blue"
        app:layout_constraintBottom_toBottomOf="@id/txt_standard_place"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="@+id/standard_switch"
        app:layout_constraintTop_toTopOf="@+id/txt_standard_place"
        app:layout_constraintVertical_bias="0.5" />

    <Switch
        android:id="@+id/theme_switch"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:layout_marginTop="92dp"
        android:text="Use night theme"
        android:textColor="@color/text_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_standard_place"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

</androidx.constraintlayout.widget.ConstraintLayout>